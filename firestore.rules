rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection: Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Posts collection:
    // - Public read access
    // - Admin write access
    match /posts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Explicitly fallback for other collections to allow authenticated users
    // This prevents breaking other features like feedback/contact if they rely on auth
    // Note: You should lock this down further as you define more collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
